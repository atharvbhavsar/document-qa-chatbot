
# Google Drive API Configuration
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
NEXT_PUBLIC_GOOGLE_REDIRECT_URI=http://localhost:3002/auth/callback

# Google AI API Configuration
GOOGLE_API_KEY=your-google-api-key

# Pinecone Configuration
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=document-qa-index
PINECONE_ENVIRONMENT=gcp-starter

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3002

# JWT Secret for authentication
JWT_SECRET=your-jwt-secret

# App API Key for additional security
APP_API_KEY=your-app-api-key

# Email Configuration for Export Feature
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASS=your-email-password
EMAIL_FROM=your-email@example.com

# Set to true to use Ollama instead of Google API
USE_OLLAMA=true

# Ollama configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=nomic-embed-text:latest
OLLAMA_CHAT_MODEL=llama3:latest
